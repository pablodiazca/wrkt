<header class="grid logo">
  <div class="col-35"></div>
  <div class="col-30"><%= image_tag('wrkt-logo.png') %></div>
</header>

<div class="grid user-form">

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form">

  <div class="form-inputs">
    <%= f.input :first_name, required: true, label: false, placeholder: 'First Name' %>
    <%= f.input :last_name, required: true, label: false, placeholder: 'Last Name' %>
    <%= f.input :email, required: true, label: false, placeholder: 'Email'  %>
    <%= f.input :password, required: true,label: false, placeholder: 'Password', hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: 'Confirm Password' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>
</div>

<%= render "devise/shared/links" %>

</div>
