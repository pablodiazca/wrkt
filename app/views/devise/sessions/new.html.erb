
<header class="grid logo">
  <div class="col-35"></div>
  <div class="col-30"><%= image_tag('wrkt-logo.png') %></div>
</header>

<div class="grid user-form">

<div class="form">

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, label: false, placeholder: 'Email' %>
    <%= f.input :password, required: false, label: false, placeholder: 'Password' %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>
</div>

<%= render "devise/shared/links" %>

</div>